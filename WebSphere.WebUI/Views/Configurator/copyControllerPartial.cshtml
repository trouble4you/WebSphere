<div id="addControllerNodeModal" class="modal fade" tabindex="-1" style="top:100px;">
    <div class=" modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">x</button>
                <h4 class="modal-title">Задайте новое имя для копии узла</h4>
            </div>
            <div class="modal-body">
                <div class="tab-content">
                        @Html.Label( "Название узла", new { @class = "control-label" })

                        @Html.TextBox("newControllerName","", new { @class = "form-control" })
                        <br/>
                        <p>
                            <button type="button" class="btn btn-success" id="addControllerNode">Ok</button>
                        </p>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#addControllerNodeModal').modal();
        $('#addControllerNode').on('click', function () {
            $('#addControllerNodeModal').modal("hide");
        });
    });


</script>
