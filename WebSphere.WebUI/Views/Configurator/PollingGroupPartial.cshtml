@model WebSphere.Domain.Entities.PollingGroupProps
@{
    var tt = Model;
}


<div class="tabs">
    @if (ViewBag.Notification != null)
    {
        if (ViewBag.Notification == 1)
        {
            <div id="aboutSaveNotification" class="alert alert-success feedBackAboutSaving">Данные успешно сохранены</div>
        }
        else
        {
            <div id="aboutSaveNotification" class="alert alert-error feedBackAboutSaving">Данные некорректны </div>
        }
    }
    <ul class="nav nav-tabs smile-tabs">
        <li class="active"><a class="liTab" href="#commonPropTab" data-toggle="tab">Общие свойства</a></li>
    </ul>
    <div class="tab-content">
        <div id="attensionSaveWrapper" style="height:30px; padding-top:3px">
            <div id="AttensionSave" class="alert-danger" role="alert"><img src="~/Content/images/additional/atts.png" />Внимание: имеются несохраненные данные!</div>
        </div>

        <div class="tab-pane active" id="commonPropTab">
            @using (Ajax.BeginForm("EditPollingGroupProps", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tagInfo", OnFailure = "OnFailure" }, new { @id = "PollingGroupPropsTab" }))
            {
                @*@Html.AntiForgeryToken()*@

                <div id="propBody">
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Name)
                    <div class="form-group row">
                        <div class="col-xs-3 ">
                            @Html.LabelFor(m => m.Id, "ID", new { @class = "control-label" })
                        </div>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(m => m.Id, new { disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.Start, "Начало", new { @class = "control-label" })
                        </div>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(m => m.Start)
                            @Html.ValidationMessageFor(m => m.Start)
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.Count, "Количество", new { @class = "control-label" })
                        </div>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(m => m.Count)
                            @Html.ValidationMessageFor(m => m.Count)
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.Function, "Modbus функция", new { @class = "control-label" })
                        </div>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(m => m.Function)
                            @Html.ValidationMessageFor(m => m.Function)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.UserData, "UserData", new { @class = "control-label" })
                        </div>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(m => m.UserData)
                            @Html.ValidationMessageFor(m => m.UserData)
                        </div>
                    </div>

                </div>
                <div id="tabButtons">
                    <button id="saveObjPropsBtn" type="submit" class="btn btn-success"> Сохранить </button>
                </div>
                @Html.ValidationSummary(true)
            }
        </div>

    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        $("#ac-1").prop('checked', true);
        calculateHeight();
        //LoadPageOff();
        if ($("#aboutSaveNotification").length > 0) {
            setTimeout(hideAboutSaveNotification, 2000);
        }
        
    });
</script>
