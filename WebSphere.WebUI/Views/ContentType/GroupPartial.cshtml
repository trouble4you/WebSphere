@model List<ContentGroup>

<h1>&nbsp;</h1>

<div class="grid clearL">

    <div class="action Link_blue1">
        <a data-ref="/ContentType/DeleteGroup" href="javascript:void(0)">
            <span class="action_delete"></span>Удалить
        </a>
    </div>

